{
  "extends": "tsconfig/tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@db/*": ["./src/db/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@router/*": ["./src/router/*"],
      "@custom-types/*": ["./src/types/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
