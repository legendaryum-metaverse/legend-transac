{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "esnext",
    "paths": {
      "@/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@database/*": ["./src/database/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@router/*": ["./src/router/*"],
      "@services/*": ["./src/services/*"],
      "@custom-types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/*": ["./tests/*"]
    },
    "baseUrl": "./"
  },
  "module": {
    "type": "commonjs"
  }
}